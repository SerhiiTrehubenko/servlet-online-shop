<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>com.tsa.shop.web.servlet.HomeWebRequestHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AllProducts</servlet-name>
        <servlet-class>com.tsa.shop.web.servlet.ProductFindAllWebRequestHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditProduct</servlet-name>
        <servlet-class>com.tsa.shop.web.servlet.ProductUpdateWebRequestHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteProduct</servlet-name>
        <servlet-class>com.tsa.shop.web.servlet.ProductDeleteWebRequestHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddProduct</servlet-name>
        <servlet-class>com.tsa.shop.web.servlet.ProductAddWebRequestHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FilterProduct</servlet-name>
        <servlet-class>com.tsa.shop.web.servlet.ProductFilterWebRequestHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.tsa.shop.web.servlet.LogInWebRequestHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>com.tsa.shop.web.servlet.LogoutWebRequestHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Cart</servlet-name>
        <servlet-class>com.tsa.shop.web.servlet.CartWebRequestHandler</servlet-class>
    </servlet>
    <filter>
        <filter-name>SecurFilter</filter-name>
        <filter-class>com.tsa.shop.web.impl.LogInFilter</filter-class>
    </filter>

    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AllProducts</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditProduct</servlet-name>
        <url-pattern>/products/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditProduct</servlet-name>
        <url-pattern>/products/edit/send</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteProduct</servlet-name>
        <url-pattern>/products/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddProduct</servlet-name>
        <url-pattern>/products/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FilterProduct</servlet-name>
        <url-pattern>/products/filter</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Cart</servlet-name>
        <url-pattern>/product/cart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Cart</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>
    <filter-mapping>
        <filter-name>SecurFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>